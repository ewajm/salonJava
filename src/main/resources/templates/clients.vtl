<h1>Clients</h1>
<h3><a href="/stylists">See stylists instead</a></h3>
#if($success)
  <h4 class="success">$success added!</h4>
#end
#if($clients.size() > 0)
  #foreach($client in $clients)
    <div class="client">
      <a href="stylists/$client.getStylistId()/clients/$client.getId()">$client.getName()</a>
    </div>
  #end
#else
  <h2>No clients yet! Hire someone!</h2>
#end
<div class="link">
<a href="/clients/new">Add new client</a>
<a href="/">Back to home</a>
</div>
